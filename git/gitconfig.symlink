# Local/private config goes in the include
[include]
        path = ~/.gitconfig.local
[merge]
	tool = vimdiff
[color]
	ui = true
[push]
	default = simple
[pull]
	default = current
	ff = true
[alias]
	amend = commit --amend --no-edit
	praise = blame
	ls = branch --list --sort committerdate \"[a-z]*\"
	puush = push -u origin HEAD
	staged = diff --staged
[diff]
	indentHeuristic = on
[core]
	pager = less -F -X
        editor = vim
        excludesfile = ~/.gitignore
